<html lang='pt-BR'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Roleta Caótica</title>
    <link rel='stylesheet' href='/styles/main.css' />
  </head>
  <body>
    <div class='container'>
      <h1>Roleta Caótica</h1>
      <p id='message'>Clique no botão para rolar o dado!</p>
      <button class='button' onclick='rollDice()'>Rolar Dado</button>
    </div>
    <script>
      async function rollDice() { try { const response = await
      fetch('/dice/roll'); const data = await response.json();
      document.getElementById('message').innerText = `Resultado: ${data.result}
      ${data.event}`; } catch (error) { console.error('Erro:', error);
      document.getElementById('message').innerText = 'Erro ao rolar o dado.'; }
      }
    </script>
  </body>
</html>